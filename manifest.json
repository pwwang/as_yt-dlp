{
    "name": "as_yt-dlp",
    "description": "Streams as yt-dlp commands for downloading",
    "version": "0.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "permissions":[
        "tabs",
        "webRequest",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts":[{
        "matches":["*://*/*"],
        "js": ["./js/content-script.js"]
    }],
    "background":{
        "service_worker":"./js/background.js"
    }
}